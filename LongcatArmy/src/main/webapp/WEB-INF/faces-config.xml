<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">


    <application>
        <message-bundle>
            
        </message-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/jsf/Auctions/viewAuction.xhtml</to-view-id>
            <redirect include-view-params="true" />
        </navigation-case>
        <navigation-case>
            <from-outcome>user</from-outcome>
            <to-view-id>/jsf/User/userLoggedInView.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>auctions</from-outcome>
            <to-view-id>/jsf/Auctions/addItemView.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>about</from-outcome>
            <to-view-id>/about.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>profile</from-outcome>
            <to-view-id>/jsf/User/profileView.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>editProfile</from-outcome>
            <to-view-id>/jsf/User/profileEdit.xhtml</to-view-id>
        </navigation-case>
        <!-- Profile links-->
        <navigation-rule>
            <from-view-id>/jsf/User/editProfile.xhtml</from-view-id>
            <navigation-case>
                <from-outcome>profile</from-outcome>
                <to-view-id>/jsf/User/profileView.xhtml</to-view-id>
                <redirect/>
            </navigation-case>
        </navigation-rule>
        <!-- Auction links-->
        <navigation-rule>
            <from-view-id>/jsf/Auctions/addItemView.xhtml</from-view-id>
            <navigation-case>
                <from-outcome>success</from-outcome>
                <to-view-id>/jsf/User/userLoggedInView.xhtml</to-view-id>
                <redirect/>
            </navigation-case>
        </navigation-rule>
    </navigation-rule>
</faces-config>
